DROP TABLE BNS_LOGIN;

CREATE TABLE BNS_NEWS (
    ID INT PRIMARY KEY AUTO_INCREMENT,
    TITLE VARCHAR(255) NOT NULL,
    DETAIL TEXT,
    DATE DATE
);
CREATE TABLE BNS_LOGIN (
    LOGIN_PWD VARCHAR(55) NOT NULL
);


INSERT INTO BNS_NEWS (TITLE, DETAIL, DATE) VALUES
('あい', 'うえお', CURRENT_TIMESTAMP);

UPDATE BNS_NEWS
SET TITLE = '수정된 제목', DETAIL = '수정된 내용', DATE = '2023-07-28'
WHERE ID = 1;

DELETE FROM BNS_NEWS WHERE ID = 1;